		</Row>
		<Row>
			<UnitCombatType>UNITCOMBAT_GUN</UnitCombatType>
			<!-- No equivalent - so the promotion is lost -->
			<FromType>PROMOTION_RANGE</FromType>
			<ToType>PROMOTION_RANGE</ToType>
		</Row>
		<Row>
			<UnitCombatType>UNITCOMBAT_GUN</UnitCombatType>
			<!-- No equivalent - so the promotion is lost -->
