<?xml version="1.0" encoding="utf-8"?>
<GameData>
	<!-- If the unit is of UnitCombatType and it has promotion FromType,
	     grant promotion ToType and remove promotion FromType -->
	<Table name="UnitPromotions_UnitCombatCrossovers">
		<Column name="UnitCombatType" type="text" reference="UnitCombatInfos(Type)"/>
		<Column name="FromType" type="text" reference="UnitPromotions(Type)"/>
		<!-- Setting ToType the same as FromType "loses" the promotion -->
		<Column name="ToType" type="text" reference="UnitPromotions(Type)"/>
	</Table>

         <!-- Actually my mod deletes totally the drill, shock, accuracy and barrage then replaces them by Offense (melee/mounted/gun/armor), then archery (archers) and ballistic (siege). So basically all the crap which a knight gets from a war chariot should be changed to offense then logistic (pathfinding was for archer units) -->

	<UnitPromotions_UnitCombatCrossovers>
		<Row>
			<UnitCombatType>UNITCOMBAT_GUN</UnitCombatType>
			<FromType>PROMOTION_ARCHERY</FromType>
			<ToType>PROMOTION_OFFENSE</ToType>
		</Row>
		<Row>
			<UnitCombatType>UNITCOMBAT_GUN</UnitCombatType>
			<FromType>PROMOTION_ARCHERY_I</FromType>
			<ToType>PROMOTION_OFFENSE_I</ToType>
		</Row>
